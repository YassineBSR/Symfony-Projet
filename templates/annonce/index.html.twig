{% extends 'base.html.twig' %}

{% block title %}Dealgames - Annonces{% endblock %}



{% block body %}

<div class="container">
  <div class="row content">
    <div class="col-sm-2 sidenav ">
      <h4>Option</h4>
      <ul class="nav nav-pills flex-column nav-stacked">
        <li class="active"><a href="#section1">Consoles</a></li>
        <li class="active"><a href="#section1">Accesoires</a></li>
        <li class="active"><a href="#section1">Jeux</a></li>
      </ul>
    </div>
    <section class="col-sm-10">
      <h1 class="text-white">Annonces</h1>
      <div class="section-title text-center text-white p-5">
        <h1 class="">Top Consoles</h1>
        <hr class="">
      </div>
      <div>
        <div class="row row-cols-1 row-cols-md-4 g-4"> 
          {% for annonce in annoncesconsoles %}
          <div class="col">
            <div class="card">
              <img src="{{ annonce.imageName ? vich_uploader_asset(annonce) : asset('uploads/placeholder.jpg') }}" alt="{{ annonce.title }}" class="card-img-top" >
              <div class="card-body">
                <h5 class="card-title">{{ annonce.title }}</h5>
                <h6 class="card-title">{{ annonce.categorie.name }}</h6>
                <p class="card-text">{{ annonce.description }}</p>
                <a href="{{ path('app_annonce_show', {'id': annonce.id})}}" class=" stretched-link"></a>
              </div>
            </div>
          </div>
           {% endfor %}
        </div>
        <br>
        <div class="d-grid gap-2 col-6 mx-auto">
          <button type="button" class="btn btn-outline-danger btn-lg"><a class="text-white text-decoration-none" href="{{ path('app_annonce_consoles')}}">Voire plus de consoles</a></button>
        </div>
        
      <div class="section-title text-center text-white p-5">
        <h1 class="">Top Accesoires</h1>
        <hr class="">
      </div>
      <div class="">
        <div class="row row-cols-1 row-cols-md-4 g-4">
          {% for annonce in annoncesaccesoires %}
          <div class="col">
            <div class="card">
              <img src="{{ annonce.imageName ? vich_uploader_asset(annonce) : asset('uploads/placeholder.jpg') }}" alt="{{ annonce.title }}" class="card-img-top" >
              <div class="card-body">
                <h5 class="card-title">{{ annonce.title }}</h5>
                <h6 class="card-title">{{ annonce.categorie.name }}</h6>
                <p class="card-text">{{ annonce.description }}</p>
                <a href="{{ path('app_annonce_show', {'id': annonce.id})}}" class=" stretched-link"></a>
              </div>
            </div>
          </div>
           {% endfor %}
        </div>
        <br>
        <div class="d-grid gap-2 col-6 mx-auto">
          <button type="button" class="btn btn-outline-danger btn-lg"><a class="text-white text-decoration-none" href="{{ path('app_annonce_accesoires')}}">Voire plus d'accesoires</a></button>
        </div>
      <div class="section-title text-center text-white p-5">
        <h1 class="">Top Jeux</h1>
        <hr class="">
      </div>
      <div>
        <div class="row row-cols-1 row-cols-md-4 g-4">
          {% for annonce in annoncesjeux %}
          <div class="col">
            <div class="card">
              <img src="{{ annonce.imageName ? vich_uploader_asset(annonce) : asset('uploads/placeholder.jpg') }}" alt="{{ annonce.title }}" class="card-img-top" >
              <div class="card-body">
                <h5 class="card-title">{{ annonce.title }}</h5>
                <h6 class="card-title">{{ annonce.categorie.name }}</h6>
                <p class="card-text">{{ annonce.description }}</p>
                <a href="{{ path('app_annonce_show', {'id': annonce.id})}}" class=" stretched-link"></a>
              </div>
            </div>
          </div>
           {% endfor %}
        </div>
        <br>
        <div class="d-grid gap-2 col-6 mx-auto">
          <button type="button" class="btn btn-outline-danger btn-lg"><a class="text-white text-decoration-none" href="{{ path('app_annonce_jeux')}}">Voire plus de jeux</a></button>
        </div>
    </section>
  </div>
</div>
{% endblock %}