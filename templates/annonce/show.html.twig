{% extends 'base.html.twig' %}

{% block title %}Dealgames - Annonces{% endblock %}

{% block body %}

  <section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="{{annonce.imageName ? vich_uploader_asset(annonce) : asset('uploads/placeholder.jpg') }}" alt="{{ annonce.title }}" /></div>
            <div class="col-md-6 text-light">
                <h1 class="display-5 fw-bolder">{{ annonce.title }}</h1>
                <h2>{{ annonce.categorie.name }}</h2>
                <p class="lead">{{ annonce.description }}</p>
                <p>{{ annonce.user.username }}</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}
