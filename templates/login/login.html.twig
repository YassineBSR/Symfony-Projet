{% extends 'base.html.twig' %}

{% block title %}Dealgames - Connection{% endblock %}

{% block body %}
{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<h1 class="text-white">Se connecter</h1>
<form class="container text-light" action="{{ path('app_login') }}" method="post">
    <div class="mb-3">
        <label class="form-label" for="username">Email:</label>
        <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" />
        <br>
        <label class="form-label" for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="_password" />

        {# If you want to control the URL the user is redirected to on success
<input type="hidden" name="_target_path" value="/account"/> #}

        <button class="btn btn-primary" type="submit">login</button>
    </div>
</form>

{% endblock %}